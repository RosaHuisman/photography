  <% if(locals.error) { %>
        <div>
          <div>
            <%= error %>
          </div>
        </div>
      <% } %>

      <% if(locals.succes) { %>
        <div>
          <div>
            <%= succes %>
          </div>
        </div>
      <% } %>
<h3>Bonjour <%= user.firstname%> <%= user.lastname %></h3>
<% if(user.status === 0) { %>

<p>Ceci est votre premiere connection, veuillez changer votre mot de passe provisoire</p>

